datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int            @id @default(autoincrement())
  email          String         @unique
  password       String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  uuid           String?
  point          Int            @default(0)
  role           Role           @default(USER)
  subscriptions  Subscription[]
  usageHistories UsageHistory[]
  secretCodes    SecretCode?

  @@map("user")
}

model SecretCode {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  isActivated Boolean  @default(false)
  createdAt   DateTime @default(now())
  userId      Int?     @unique // The user who owns the secret code
  user        User?    @relation(fields: [userId], references: [id])

  @@map("secret_code")
}

enum Role {
  USER
  TRIAL
  ADMIN
}

model Subscription {
  id        Int       @id @default(autoincrement())
  userId    Int
  packageId Int
  startDate DateTime  @default(now())
  endDate   DateTime?
  isExpired Boolean   @default(false)
  user      User      @relation(fields: [userId], references: [id])
  package   Package   @relation(fields: [packageId], references: [id])

  @@map("subscription")
}

model Package {
  id            Int            @id @default(autoincrement())
  name          String
  description   String?
  duration      Int // Duration in days (e.g., 3 for trial, 30 for 1 month)
  isPermanent   Boolean // True if the package is permanent, false otherwise
  price         Int            @default(0)
  href          String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  subscriptions Subscription[]

  @@map("package")
}

model UsageHistory {
  id        Int      @id @default(autoincrement())
  userId    Int
  linkGoods String
  usedAt    DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("usageHistory")
}
